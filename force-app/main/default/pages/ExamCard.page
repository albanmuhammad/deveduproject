<apex:page standardController="Opportunity" extensions="ExamCardController" renderAs="pdf" 
    applyBodyTag="false" applyHtmlTag="false" showHeader="false">
<html>
    <head>
        <style>
            @page {
                size: A4 landscape;
            }
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
            }
            .card {
                border: 2px solid #000;
                width: 540px;
                height: 340px;
                padding: 15px;
                position: relative;
                border-radius: 12px;
                box-shadow: 0 0 5px #888;
                background: #fff;
                margin: auto;
            }
            .header-text {
                background: #004080;
                color: #fff;
                font-size: 20px;
                font-weight: bold;
                padding: 8px 12px;
                border-radius: 8px 8px 0 0;
            }
            .header-logo {
                position: absolute;
                top: 15px;
                right: 15px;
            }
            .header-logo img {
                width: 70px;
            }
            .details-label {
                font-weight: bold;
                font-size: 14px;
                color: #004080;
                display: inline-block;
                width: 130px;
            }
            .details-value {
                font-size: 14px;
                color: #333;
            }
            .photo-box {
                width: 100px;
                height: 140px;
                border: 1px solid #000;
                margin: auto;
            }
            .footer {
                text-align: center;
                font-size: 11px;
                margin-top: 20px;
                color: #F58220;
                font-weight: bold;
            }
        </style>
    </head>
    <body>
        <div class="card">
            <!-- Header -->
            <div class="header">
                <div class="header-text">
                    Exam Card
                </div>
                <div class="header-logo">
                    <img src="{!URLFOR($Resource.MetroSevenLogo)}" />
                </div>
            </div>

            <!-- Content -->
            <table style="margin-top:20px; width:100%;">
                <tr>
                    <!-- Photo -->
                    <td style="width:160px; text-align:center; vertical-align:top;">
                        <apex:outputPanel rendered="{!NOT(ISBLANK(photoUrl))}">
                            <img src="{!photoUrl}" width="140" height="180" style="border:1px solid #000;" />
                        </apex:outputPanel>
                        <apex:outputPanel rendered="{!ISBLANK(photoUrl)}">
                            <img src="{!URLFOR($Resource.PlaceholderPhoto)}" width="140" height="180" style="border:1px solid #000;" />
                        </apex:outputPanel>
                    </td>

                    <!-- Student Details -->
                    <td style="padding-left:20px; vertical-align:top;">
                        <p>
                            <span class="details-label">Registration ID :</span>
                            <span class="details-value">{!registrationId}</span>
                        </p>
                        <p>
                            <span class="details-label">Test ID :</span>
                            <span class="details-value">{!testId}</span>
                        </p>
                        <p>
                            <span class="details-label">Name :</span>
                            <span class="details-value">{!studentName}</span>
                        </p>
                        <p>
                            <span class="details-label">Test Schedule :</span>
                            <span class="details-value">{!testSchedule}</span>
                        </p>
                    </td>
                </tr>
            </table>

            <!-- Footer -->
            <div class="footer">
                Please bring this card on exam day. Thank you.
            </div>
        </div>
    </body>
</html>
</apex:page>